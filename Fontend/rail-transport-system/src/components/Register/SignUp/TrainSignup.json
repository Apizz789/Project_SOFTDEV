$(document).ready(function() {
    $('.datepicker').TrainSignUp({
      formatSubmit: 'dd-mm-yyyy',
      min: [1900,12,17],
      max: [2999,01,15],
      closeOnSelect: false,
      closeOnClear: false,
    });
  
    // Autotab
    $('.date-field').autotab('number');
    
    $('.single-date-field').mask('00/00/0000', 
      {placeholder: "_ _ /_ _ /_ _ _ _"});
  });